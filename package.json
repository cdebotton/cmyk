{
  "name": "cmyk",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "app",
    "api",
    "http",
    "apollo-types"
  ],
  "scripts": {
    "build:prisma": "prisma deploy",
    "watch:prisma": "yarn build:prisma --watch",
    "prebuild:graphql": "rm -rf dist/graphql",
    "build:graphql": "NODE_ENV=development BABEL_TARGET=node babel -d dist/graphql src/graphql --extensions .ts",
    "build": "npm-run-all --parallel 'build:http' 'build:graphql'",
    "prestart:graphql-production": "yarn build:graphql",
    "start:graphql-production": "NODE_ENV=production node dist/graphql/index.js ",
    "start:production": "npm-run-all --parallel 'start:http-production' 'start:graphql-production' 'build:app'",
    "prestart:graphql": "prisma deploy",
    "start:graphql": "PORT=3002 NODE_ENV=development BABEL_TARGET=node nodemon src/graphql/index.ts",
    "start:app": "cd app && react-scripts start",
    "start": "npm-run-all --parallel 'start:app' 'start:graphql'",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "is-ci 'test:coverage' 'test:watch'",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_module/jest/bin/jest.js --runInBand"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^23.3.9",
    "@types/jsonwebtoken": "^8.3.0",
    "apollo": "^2.0.13",
    "babel-plugin-styled-components": "^1.8.0",
    "dotenv": "^6.1.0",
    "graphqlgen": "^0.3.0",
    "husky": "^1.1.3",
    "is-ci-cli": "^1.1.1",
    "lint-staged": "^8.0.4",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.2",
    "prisma": "^1.20.1",
    "react-docgen-typescript-loader": "^3.0.0",
    "react-testing-library": "^5.2.3",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "typescript": "3.1.6",
    "wait-on": "^3.2.0"
  },
  "dependencies": {
    "apollo-server": "^2.2.0",
    "aws-sdk": "^2.353.0",
    "bcryptjs": "^2.4.3",
    "graphql": "^14.0.2",
    "graphql-import": "^0.7.1",
    "jsonwebtoken": "^8.3.0",
    "prisma-client-lib": "^1.20.1"
  }
}
