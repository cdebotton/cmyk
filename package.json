{
  "name": "cmyk",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "app",
    "api",
    "http"
  ],
  "scripts": {
    "db:build": "prisma deploy",
    "db:watch": "yarn build:prisma --watch",
    "preapi:start": "prisma deploy",
    "api:start": "cd api && yarn start",
    "app:start": "cd app && yarn start",
    "start": "npm-run-all --parallel 'app:start' 'api:start'",
    "deploy:api": "cd api && yarn deploy",
    "deploy:http": "cd http && yarn deploy",
    "predeploy": "cd app && yarn build",
    "deploy": "npm-run-all --parallel 'deploy:http' 'deploy:api'",
    "test": "is-ci 'test:coverage' 'test:watch'",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_module/jest/bin/jest.js --runInBand"
  },
  "devDependencies": {
    "apollo": "^2.1.2",
    "dotenv": "^6.1.0",
    "graphqlgen": "^0.4.0",
    "husky": "^1.1.4",
    "is-ci-cli": "^1.1.1",
    "lint-staged": "^8.0.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.15.2",
    "prisma": "1.20.7",
    "react-docgen-typescript-loader": "^3.0.0",
    "react-testing-library": "^5.2.3",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "typescript": "rc",
    "wait-on": "^3.2.0"
  }
}
